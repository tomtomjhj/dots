font-family = "Iosevka Custom"
font-family = "Noto Sans CJK KR"
font-size = 14
adjust-cell-width = -1
# font-synthetic-style is on by default but broken https://github.com/ghostty-org/ghostty/discussions/3791

theme = dark:quite-dark,light:quite-light

cursor-style = block
cursor-color=cell-foreground
cursor-text=cell-background
# this makes cursor more discernible when on boundary of reverse video region
cursor-opacity=0.93

selection-foreground=cell-background
selection-background=cell-foreground

mouse-hide-while-typing = true
mouse-scroll-multiplier = precision:0.3,discrete:1

keybind = f11=toggle_fullscreen
keybind = ctrl+enter=unbind
